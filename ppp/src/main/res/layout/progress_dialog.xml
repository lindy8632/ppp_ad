<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView 
	    android:id="@+id/loadingIv"
	    android:layout_width="@dimen/common_measure_50dp"
	    android:layout_height="@dimen/common_measure_52dp"
	    android:layout_centerInParent="true"/>
    
	<TextView 
	    android:id="@+id/loadingTv"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/common_measure_40dp"
	    android:gravity="center_horizontal"
	    android:textSize="@dimen/common_measure_20dp"
	    android:textColor="@color/white"
	    android:layout_below="@+id/loadingIv"/>
    
</RelativeLayout>
