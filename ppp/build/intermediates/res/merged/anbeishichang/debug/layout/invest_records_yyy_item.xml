<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:padding="@dimen/common_measure_10dp"
        android:background="@drawable/style_rect_filling_click_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:layout_marginBottom="@dimen/common_measure_10dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/invest_records_yyy_item_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <!-- 标的名字 -->

                <TextView
                    android:id="@+id/invest_records_yyy_item_borrowname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/common_measure_15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <TextView
                    android:id="@+id/invest_records_yyy_item_investtype"
                    android:layout_width="@dimen/common_measure_60dp"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/invest_records_yyy_item_borrowname"
                    android:background="@drawable/style_rect_fillet_filling_orange"
                    android:gravity="center"
                    android:text="首投"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_18dp" />
                
                <ImageView 
                    android:layout_width="@dimen/common_measure_10dp"
                    android:layout_height="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_10dp"
                    android:src="@drawable/my_account_arrow"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invest_records_yyy_item_layout1"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_marginLeft="@dimen/common_measure_15dp"
                android:layout_marginRight="@dimen/common_measure_15dp"
                android:orientation="horizontal" >

                <!-- 首投日 -->

                <TextView
                    android:id="@+id/invest_records_yyy_item_firsttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />
                <!-- 最近到期日 -->

                <TextView
                    android:id="@+id/invest_records_yyy_item_nearendtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="首投本金"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_yyy_item_firstmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="在投金额"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_yyy_item_nowmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />

               
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="投资收益"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_yyy_item_interestmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />

               
            </LinearLayout>
            
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invest_records_yyy_item_nhll_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="本期预期年化收益率"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_records_yyy_item_nhll"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10%"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="备注"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_records_yyy_item_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="----"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_marginTop="@dimen/common_measure_10dp">
            
            <Button
                    android:id="@+id/invest_record_yyy_item_catcompact"
                    android:layout_width="@dimen/common_measure_110dp"
                    android:layout_height="@dimen/common_measure_40dp"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:background="@drawable/style_rect_fillet_filling_blue"
                    android:layout_toLeftOf="@+id/invest_records_yyy_item_line1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="查看合同"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_20dp" />
            
			<View
			    android:id="@+id/invest_records_yyy_item_line1" 
			    android:layout_width="@dimen/common_measure_1dp"
			    android:layout_height="match_parent"
			    android:layout_marginLeft="@dimen/common_measure_20dp"
			    android:layout_marginRight="@dimen/common_measure_20dp"
			    android:layout_centerInParent="true"/>     
			    
			 <Button
                    android:id="@+id/invest_record_yyy_item_applyorcancel"
                    android:layout_width="@dimen/common_measure_110dp"
                    android:layout_height="@dimen/common_measure_40dp"
                    android:layout_toRightOf="@+id/invest_records_yyy_item_line1"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:background="@drawable/style_rect_fillet_filling_blue"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_20dp" />
            
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>