<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitate_activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

                <!-- 已完成实名认证 -->
                <LinearLayout
                    android:id="@+id/invitate_activity_verify_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_30dp"
                        android:layout_marginRight="@dimen/common_measure_40dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/invitate_activity_way_one_logo"
                            android:layout_width="@dimen/common_measure_30dp"
                            android:layout_height="@dimen/common_measure_30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/yxb_redeem_success_icon"
                            android:visibility="gone"/>
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_measure_5dp"
                                android:text="方法一：手机号邀请好友"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/common_measure_18dp" />

                            <TextView
                                android:id="@+id/invitate_activity_way_one_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:layout_marginLeft="@dimen/common_measure_5dp"
                                android:textSize="@dimen/common_measure_17dp"
                                android:textColor="@color/gray1"
                                android:text="重要！好友注册元立方账户时，须在“推荐码”一栏正确填写您的注册手机号，您才可能获得奖励哟~"/>

                        </LinearLayout>

                    </LinearLayout>
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_measure_20dp"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_marginRight="@dimen/common_measure_40dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/invitate_activity_way_two_logo"
                        android:layout_width="@dimen/common_measure_30dp"
                        android:layout_height="@dimen/common_measure_30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/yxb_redeem_error_icon"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_5dp"
                        android:text="方法二：邀请好友扫码并完成注册"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_18dp" />

                </LinearLayout>

                    <ImageView
                        android:id="@+id/invitate_activity_qrcode"
                        android:layout_width="@dimen/common_measure_180dp"
                        android:layout_height="@dimen/common_measure_180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/common_measure_20dp"
                        android:clickable="false"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_30dp"
                        android:layout_marginRight="@dimen/common_measure_40dp"
                        android:layout_marginTop="@dimen/common_measure_20dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/invitate_activity_way_three_logo"
                            android:layout_width="@dimen/common_measure_30dp"
                            android:layout_height="@dimen/common_measure_30dp"
                            android:src="@drawable/yxb_redeem_error_icon"
                            android:scaleType="fitCenter"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_measure_5dp"
                            android:text="方法三："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/common_measure_18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击“立即邀请”，将活动页面分享给微信好友或者朋友圈"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/common_measure_18dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/invitate_activity_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_measure_63dp"
                        android:layout_marginLeft="@dimen/common_measure_20dp"
                        android:layout_marginRight="@dimen/common_measure_20dp"
                        android:layout_marginTop="@dimen/common_measure_60dp"
                        android:background="@drawable/blue_fillet_btn_selector"
                        android:text="立即邀请"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_26dp" />

                    <Button
                        android:id="@+id/invitate_activity_btn_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_measure_63dp"
                        android:layout_marginLeft="@dimen/common_measure_20dp"
                        android:layout_marginRight="@dimen/common_measure_20dp"
                        android:layout_marginTop="@dimen/common_measure_10dp"
                        android:background="@drawable/blue_fillet_btn_selector"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_26dp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invitate_activity_know_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“了解更多”"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="，手把手教您轻松赚奖励！"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>