<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/user_fragment_toplayout"
        layout="@layout/common_topbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- 登录界面 -->

        <LinearLayout
            android:id="@+id/user_fragment_login_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/child_background"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_60dp"
                android:layout_marginTop="@dimen/common_measure_20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/user_fragment_nav_personal_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_nav_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="个人登录"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/user_fragment_nav_company_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_nav_selector"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="企业登录"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- 个人登录 -->

                <include
                    android:id="@+id/user_fragment_personal_login_layout"
                    layout="@layout/login_personal_login_layout" />

                <!-- 企业登录 -->

                <include
                    android:id="@+id/user_fragment_company_login_layout"
                    layout="@layout/login_company_login_layout"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/common_measure_335dp"
                    android:layout_height="@dimen/common_measure_48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/common_measure_80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ylf_logo" />
            </RelativeLayout>
        </LinearLayout>

        <com.ylfcf.ppp.ptr.PtrClassicFrameLayout
            xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_fragment_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="1000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.7" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <include 
                    layout="@layout/my_account" />
                
            </RelativeLayout>
        </com.ylfcf.ppp.ptr.PtrClassicFrameLayout>
    </FrameLayout>

</LinearLayout>