<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_fragment_mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/more_fragment_toplayout"
        layout="@layout/common_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:layout_marginTop="@dimen/common_measure_20dp"
                android:background="@color/edittext_line_color" />

            <LinearLayout
                android:id="@+id/more_ppjs_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="品牌介绍"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <LinearLayout
                android:id="@+id/more_xwgg_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo2" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新闻公告"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color" />

            <LinearLayout
                android:id="@+id/more_cjwt_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo3" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="常见问题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <LinearLayout
                android:id="@+id/more_kfrx_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo4" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="客服热线"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:gravity="center_vertical"
                    android:text="021-31033898-817"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <!-- 接受消息推送 -->

            <LinearLayout
                android:id="@+id/more_jsxxts_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo5" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="接受消息推送"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <ToggleButton
                    android:id="@+id/morefragment_msgtender_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:button="@drawable/toggle_seletor"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color" />

            <!-- 检查新版本 -->

            <LinearLayout
                android:id="@+id/more_jcxbb_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_75dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_measure_30dp"
                android:paddingRight="@dimen/common_measure_20dp" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_26dp"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_logo6" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查新版本"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <TextView
                    android:id="@+id/more_fragment_versioncode"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/common_measure_20dp"
                    android:gravity="center_vertical"
                    android:text="V1.0.0"
                    android:textColor="@color/edittext_hint_color"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <Button
                android:id="@+id/more_fragment_logout_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_68dp"
                android:layout_marginLeft="@dimen/common_measure_20dp"
                android:layout_marginRight="@dimen/common_measure_20dp"
                android:layout_marginBottom="@dimen/common_measure_20dp"
                android:layout_marginTop="@dimen/common_measure_30dp"
                android:background="@drawable/blue_fillet_btn_selector"
                android:text="安全退出"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_26dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>