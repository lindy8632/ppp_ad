<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/withdraw_activity_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/withdraw_activity_toplayout"
        layout="@layout/common_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_20dp"
                android:background="@drawable/style_rect_fillet_filling_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/common_measure_10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_5dp"
                    android:src="@drawable/prompt_logo2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_5dp"
                    android:text="因业务调整，即日起，关闭移动端“汇付账户提现功能”。如需使用此功能，请联系客服。"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/withdraw_activity_verify_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/common_measure_20dp"
                android:layout_marginRight="@dimen/common_measure_20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="可提总额："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_20dp" />

                    <TextView
                        android:id="@+id/withdraw_activity_balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行卡号："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_20dp" />

                    <TextView
                        android:id="@+id/withdraw_activity_bankcard_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_20dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/withdraw_activity_money_et"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_66dp"
                    android:layout_marginTop="@dimen/common_measure_20dp"
                    android:background="@drawable/style_rect_fillet_filling_edit_white"
                    android:hint=" 请输入提现金额"
                    android:inputType="numberDecimal"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/common_measure_10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/common_measure_22dp" />

                <EditText
                    android:id="@+id/withdraw_activity_pwd_et"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_66dp"
                    android:layout_marginTop="@dimen/common_measure_5dp"
                    android:background="@drawable/style_rect_fillet_filling_edit_white"
                    android:hint=" 请输入提现密码"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/common_measure_10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/common_measure_22dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_measure_66dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_rect_fillet_filling_edit_white"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/common_measure_26dp"
                            android:layout_height="@dimen/common_measure_27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_measure_7dp"
                            android:src="@drawable/login_edit_icon_phone" />

                        <EditText
                            android:id="@+id/withdraw_activity_authcode_et"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/common_measure_5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingLeft="@dimen/common_measure_30dp"
                            android:paddingRight="@dimen/common_measure_30dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edittext_hint_color"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/common_measure_22dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/withdraw_activity_get_authnum_btn"
                        android:layout_width="@dimen/common_measure_150dp"
                        android:layout_height="@dimen/common_measure_60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/common_measure_10dp"
                        android:background="@drawable/blue_fillet_btn_selector"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_22dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/withdraw_activity_sms_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_8dp"
                    android:text="短信验证码已发送至您的银行预留手机号"
                    android:textColor="@color/red"
                    android:textSize="@dimen/common_measure_18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/withdraw_activity_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_68dp"
                    android:layout_marginTop="@dimen/common_measure_23dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="确认提现"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_26dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/withdraw_activity_cancel_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_measure_10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="查看提现记录"
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:id="@+id/withdraw_activity_getback_withdraw_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_measure_10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="找回提现密码"
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_measure_20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示："
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:id="@+id/withdraw_activity_prompt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>