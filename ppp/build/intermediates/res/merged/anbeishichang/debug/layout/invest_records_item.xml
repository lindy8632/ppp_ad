<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_288dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:background="@drawable/style_rect_filling_click_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_70dp"
            android:gravity="center_vertical" >

            <!-- 标的名字 -->

            <LinearLayout
                android:id="@+id/invest_records_borrowinfo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/invest_records_item_borrowlogo"
                    android:layout_width="@dimen/common_measure_30dp"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:src="@drawable/licai_xsb_logo"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/invest_records_item_borrowname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invest_records_borrowinfo_layout"
                android:layout_marginLeft="@dimen/common_measure_15dp"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/invest_records_item_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_records_item_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_measure_15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/my_account_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_80dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invest_records_item_nhsy_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="年化利率"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_item_rate"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.00%"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invest_records_item_add_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="加息奖励"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_item_add_rate"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.00%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="投资金额"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_item_invest_money"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0元"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="投资收益"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_item_interest_money"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0元"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/invest_records_item_remark_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_item_interest_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="一 一"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/invest_record_item_catcompact"
            android:layout_width="@dimen/common_measure_110dp"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_marginBottom="@dimen/common_measure_10dp"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:background="@drawable/style_rect_fillet_filling_blue"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="查看合同"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_20dp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@drawable/style_xuxian_gray"
            android:layerType="software" />

        <TextView
            android:id="@+id/invest_records_item_status"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_40dp"
            android:background="@color/edittext_hint_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_measure_15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_22dp" />
    </LinearLayout>

</LinearLayout>