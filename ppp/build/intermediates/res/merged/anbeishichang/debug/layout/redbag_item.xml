<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_150dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/style_rect_fillet_filling_white">
        
        <!-- 额度 -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="@dimen/common_measure_28dp"
                android:layout_height="@dimen/common_measure_34dp"
                android:src="@drawable/red_bag" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_5dp"
                android:text="额度：" 
                android:textSize="@dimen/common_measure_18dp"
                android:textColor="@color/gray"/>
            
            <TextView 
                android:id="@+id/redbag_item_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_measure_24dp"
                android:textColor="@color/orange_text"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="元" 
                android:textSize="@dimen/common_measure_18dp"
                android:textColor="@color/gray"/>
            
            <Button 
                android:id="@+id/redbag_list_item_btn"
                android:layout_width="@dimen/common_measure_100dp"
                android:layout_height="@dimen/common_measure_30dp"
                android:gravity="center"
                android:text="使用我的红包"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_16dp"
                android:background="@drawable/style_rect_fillet_blue"
                android:visibility="gone"/>
            
        </LinearLayout>
        
        <!-- 有效期 -->
        <TextView 
            android:id="@+id/regbag_item_validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_6dp"
            android:layout_marginBottom="@dimen/common_measure_6dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"/>
        
        <!-- 使用限制 -->
        <TextView 
            android:id="@+id/regbag_item_use_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"/>
        
        <!-- 备注 -->
        <TextView 
            android:id="@+id/regbag_item_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_6dp"
            android:textColor="@color/black"
            android:textSize="@dimen/common_measure_18dp"/>
        
    </LinearLayout>

</LinearLayout>
