<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_rect_fillet_filling_white_dialog"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:gravity="center_horizontal"
        android:text="会员投资提示"
        android:textSize="@dimen/common_measure_24dp"
        android:textColor="@color/black"/>
    
    <!-- 红包的布局 -->
    <RelativeLayout 
        android:id="@+id/invest_prompt_hb_layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        
        <LinearLayout 
            android:id="@+id/invest_prompt_layout_hb_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已领取"
                android:textSize="@dimen/common_measure_20dp"
                android:textColor="@color/gray"/>
            
            <TextView 
                android:id="@+id/invest_prompt_layout_hb_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_measure_20dp"
                android:textColor="@color/common_topbar_bg_color"/>
            
        </LinearLayout>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invest_prompt_layout_hb_top"
            android:gravity="center_horizontal"
            android:text="(标的到期时将随本息一起返还)"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
    </RelativeLayout>
    
    <!-- 元金币和加息券布局 -->
    <LinearLayout 
        android:id="@+id/invest_prompt_yjbjxq_layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已使用"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
        <TextView 
            android:id="@+id/invest_prompt_layout_yjbjxq_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/common_topbar_bg_color"/>
        
    </LinearLayout >
    
    <!-- 投资金额的布局 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/invest_prompt_layout_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您确认投资"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:id="@+id/invest_prompt_layout_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元吗？"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <!-- 元金币的布局 -->
    <LinearLayout 
        android:id="@+id/invest_prompt_yjb_layout_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(其中"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:id="@+id/invest_prompt_layout_benjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元为本金，"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:id="@+id/invest_prompt_layout_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元为元金币)"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <!-- 两周年回馈返现活动 -->
    <LinearLayout 
        android:id="@+id/invest_prompt_layout_twoyears_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        
        <LinearLayout 
            android:id="@+id/invest_prompt_layout_twoyears_layouttop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您将获得"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp"/>
            
            <TextView 
                android:id="@+id/invest_prompt_layout_twoyears_interestmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_20dp"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元的返现奖励"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/invest_prompt_layout_twoyears_layoutbottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资超过"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp"/>
            
            <TextView 
                android:id="@+id/invest_prompt_layout_twoyears_investmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_20dp"/>
            
            <TextView 
                android:id="@+id/invest_prompt_layout_twoyears_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元可获得返现奖励哦"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <!-- android:background="@drawable/style_rect_fillet_filling_blue" -->
        <Button 
            android:id="@+id/invest_prompt_layout_surebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_24dp"/>
         
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>
        
        <Button 
            android:id="@+id/invest_prompt_layout_cancelbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_24dp"/>
        
    </LinearLayout>

</LinearLayout>
